{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}Все товары{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            {% include 'admin/_embed/_card/_header_action.html.twig' with {
                'sectionTitle': 'Товары',
                'actionUrl': path('admin_product_add')
            } %}
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="main_table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Категория</th>
                        <th>Название</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Опубликовано</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{% if product.category %}{{ product.category.title }}{% endif %}</td>
                            <td>{{ product.title }}</td>
                            <td>{{ product.price }} ₽</td>
                            <td>{{ product.quantity }}</td>
                            <td>
                                <i class="fas fa-check fa-sm" style="color: {% if product.isPublished %}green{% else %}lightgray{% endif %};"></i></td>
                            <td>
                                <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-outline-info">Изменить</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="navigation">
{#                {{ knp_pagination_render(pagination) }}#}
            </div>
        </div>
    </div>
{% endblock %}
